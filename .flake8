# Configuración de Flake8 para BetiBot
[flake8]
# Configuración de longitud de línea
max-line-length = 88

# Configuración de ignores
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (manejado por black)
    W504,  # line break after binary operator
    E402,  # module level import not at top of file
    F401,  # imported but unused (manejado por isort)
    F403,  # star import used
    F405,  # name may be undefined, or defined from star imports

# Configuración de excludes
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    venv,
    .venv,
    deprecated,
    examples,
    tests

# Configuración de imports
import-order-style = google
application-import-names = src

# Configuración de complexity
max-complexity = 10

# Configuración de docstrings
docstring-convention = google

# Configuración de naming
naming-convention = 
    function-rgx = ^[a-z_][a-z0-9_]*$
    variable-rgx = ^[a-z_][a-z0-9_]*$
    class-rgx = ^[A-Z][a-zA-Z0-9]*$
    method-rgx = ^[a-z_][a-z0-9_]*$
    module-rgx = ^[a-z_][a-z0-9_]*$
    const-rgx = ^[A-Z][A-Z0-9_]*$
    class-attribute-rgx = ^[a-z_][a-z0-9_]*$
    inlinevar-rgx = ^[a-z_][a-z0-9_]*$
    argument-rgx = ^[a-z_][a-z0-9_]*$
    attr-rgx = ^[a-z_][a-z0-9_]*$
    decorator-rgx = ^[a-z_][a-z0-9_]*$

# Configuración de output
format = 
    %(path)s:%(row)d:%(col)d: %(code)s %(text)s
    %(code)s: %(text)s

# Configuración de statistics
statistics = True
count = True

