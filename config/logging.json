{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "default": {
      "level": "INFO",
      "formatter": "standard",
      "class": "logging.StreamHandler"
    },
    "file": {
      "level": "INFO",
      "formatter": "standard",
      "class": "logging.FileHandler",
      "filename": "logs/invoicebot.log",
      "mode": "a"
    }
  },
  "loggers": {
    "": {
      "handlers": [
        "default",
        "file"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}